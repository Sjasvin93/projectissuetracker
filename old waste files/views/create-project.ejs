<html>
    <head>
        <title>
            <%= title %>
        </title>
        <!--Script to use fontawesome Icons-->
        <script src="https://kit.fontawesome.com/e1db25fb05.js" crossorigin="anonymous"></script>
        <!--Css file-->
        <link rel="stylesheet" href="/css/style.css">
    </head>
    <body>
        <form action="/new-project/project-details" method="post">
            <div class="input-name">
                <input type="text" placeholder="Enter the Project name" name="name" required>
            </div>
            <div class="input-description">
                <input type="text" placeholder="Description..." name="description" required>
            </div>
            <div class="input-author">
                <input type="text" placeholder="Enter the Author name" name="author" required>
            </div>
            <input type="submit" value="submit">
        </form>
    </body>
</html>